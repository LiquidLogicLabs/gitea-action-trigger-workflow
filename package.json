{
  "name": "gitea-action-trigger-workflow",
  "version": "0.1.1",
  "description": "Gitea Action: trigger a workflow in another Gitea repository.",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "npm run build:ts && npm run build:ncc",
    "build:ts": "tsc -p tsconfig.json",
    "build:ncc": "ncc build lib/main.js -o dist -m",
    "clean": "rm -rf lib dist",
    "lint": "eslint .",
    "prepare": "npm run build",
    "test": "jest",
    "test:ci": "jest --ci",
    "changelog:release": "conventional-changelog -p conventionalcommits -r 1 -i CHANGELOG.md -s",
    "changelog:notes": "conventional-changelog -p conventionalcommits -r 1"
  },
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.17.0",
    "typescript": "^5.7.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.14",
    "conventional-changelog-cli": "^5.0.0"
  }
}
