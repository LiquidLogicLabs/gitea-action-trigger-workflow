{
  "name": "gitea-action-trigger-workflow",
  "version": "0.1.3",
  "description": "Gitea Action: trigger a workflow in another Gitea repository.",
  "private": true,
  "type": "commonjs",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "package": "npm run build",
    "clean": "rm -rf lib dist",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "npm run build",
    "test": "jest",
    "test:ci": "jest --ci",
    "changelog:release": "conventional-changelog -p conventionalcommits -r 1 -i CHANGELOG.md -s",
    "changelog:notes": "conventional-changelog -p conventionalcommits -r 1"
  },
  "dependencies": {
    "@actions/core": "^1.11.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.7",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vercel/ncc": "^0.38.3",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2"
  }
}
